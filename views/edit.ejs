<% include partials/_header %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/asignaturas/edit/<%= asignatura._id %>" method="post">
            <div class="form-group">
              <input class="form-control" type="text" name="nombre" placeholder="Nombre" value="<%= asignatura.nombre %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="planEstudios" cols="80"
                placeholder="Plan de Estudios"
                ><%= asignatura.planEstudios %></textarea>
            </div>
            <!-- Aquí puedes agregar los demás campos de tu esquema Asignatura -->
            <button class="btn btn-primary" type="submit">
              Update 
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/_footer%>

